{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["CLAUDE.md"],
  "provider": {
    "opencode": {
      "options": {}
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "n8n-mcp": {
      "type": "local",
      "command": "npx",
      "args": ["n8n-mcp"],
      "env": {
        "MCP_MODE": "stdio",
        "LOG_LEVEL": "error",
        "DISABLE_CONSOLE_OUTPUT": "true"
      }
    }
  },
  "tools": {
    "github-triage": true,
    "github-pr-search": true
  }
}
